{
  "all": true,
  "include": ["src/**/*.{ts,tsx}"],
  "exclude": [
    "src/**/*.test.{ts,tsx}",
    "src/**/*.spec.{ts,tsx}",
    "src/**/*.stories.{ts,tsx}",
    "src/vite-env.d.ts",
    "src/main.tsx"
  ],
  "reporter": ["html", "lcov", "text", "text-summary", "json"],
  "report-dir": "./coverage",
  "check-coverage": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 75,
  "per-file": true
}
